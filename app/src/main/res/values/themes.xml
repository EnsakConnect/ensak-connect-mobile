<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ENSAKConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ENSAKConnect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ENSAKConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.ENSAKConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/lighpurple_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10sp</item>




    </style>

    <style name="ProfileActivityTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
    </style>

    <style name="PurpleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">@string/se_connecter</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--  Buttons  -->
    <style name="ButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonBase">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonPrimarySecondary" parent="ButtonBase">
        <item name="android:background">@drawable/button_primary_secondary_background</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ButtonDanger" parent="ButtonBase">
        <item name="android:background">@drawable/button_danger_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDangerSecondary" parent="ButtonBase">
        <item name="android:background">@drawable/button_danger_secondary_background</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="CustomizableButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/customizable_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- EditText -->
    <style name="EditTextBase" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--  Typography   -->
    <style name="Label">
        <item name="android:textColor">@color/lbl_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>