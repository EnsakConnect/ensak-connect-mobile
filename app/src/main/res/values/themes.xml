<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ENSAKConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ENSAKConnect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ENSAKConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.ENSAKConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/lighpurple_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="PreferenceCategoryTitle">
        <item name="android:textSize">20sp</item> <!-- Taille du texte en sp (pixels indépendants de l'échelle) -->
    </style>
    <style name="ProfileActivityTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
    </style>

    <style name="PurpleButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">@string/se_connecter</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  Buttons  -->
    <style name="ButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonBase">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonPrimarySecondary" parent="ButtonBase">
        <item name="android:background">@drawable/button_primary_secondary_background</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ButtonPrimarySecondarySmall" parent="ButtonPrimarySecondary">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonDanger" parent="ButtonBase">
        <item name="android:background">@drawable/button_danger_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDangerSecondary" parent="ButtonBase">
        <item name="android:background">@drawable/button_danger_secondary_background</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="CustomizableButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/customizable_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- EditText -->
    <style name="EditTextBase" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--  Typography   -->
    <style name="Paragraph">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Heading3">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>
    <style name="Heading4">
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name="Heading5">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name="Label">
        <item name="android:textColor">@color/lbl_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--  Progress  -->
    <style name="LoadingWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">32dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <!--  Chip  -->
    <style name="PostChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="textStartPadding">7dp</item>
        <item name="textEndPadding">7dp</item>
        <item name="chipBackgroundColor">@color/black</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>
    <style name="PostChipQna" parent="PostChip">
        <item name="android:text">Q&amp;A</item>
        <item name="android:textColor">#5B21B6</item>
        <item name="chipBackgroundColor">#265B21B6</item>
    </style>
</resources>