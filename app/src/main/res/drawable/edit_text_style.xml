<!-- res/drawable/edit_text_style.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- The white background color for the EditText -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White background -->
                    <!-- Rounded corners for the EditText background -->
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- The bottom border for the EditText -->
            <!-- Adjust top padding to create the appearance of a bottom border -->
            <item android:top="0dp" android:right="0dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <!-- Border color -->
                    <stroke android:width="0dp" android:color="#000000" />
                    <corners android:radius="16dp" /> <!-- Match the corner radius -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
